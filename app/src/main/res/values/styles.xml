<resources>
    <!-- 对话框的透明背景效果 -->
    <style name="dialog_transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- Base application theme. -->
        <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
        </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/title_bg</item>
        <item name="android:background">@color/title_bg</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
        <!-- Application theme. -->
        <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
            <item name="android:windowAnimationStyle">@style/activityAnimation</item>
            <item name="actionBarTabTextStyle">@style/MyTabBarTitleText</item>
        </style>

        <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
            <item name="android:textColor">@android:color/white</item>
        </style>

        <style name="MyTabBarTitleText" parent="@style/Widget.AppCompat.ActionBar.TabText">
            <item name="android:textColor">@android:color/black</item>
        </style>


        <style name="activityAnimation" parent="@android:style/Animation">
            <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
            <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
            <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
            <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        </style>

        <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
            <item name="android:button">@drawable/checkbox_style</item>
        </style>

        <!-- ****************************************我的 ********************************************* -->
        <style name="text_style">
            <item name="android:textSize">@dimen/text_size_15sp</item>
            <item name="android:ellipsize">end</item>
            <item name="android:gravity">left|center</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <style name="kaola_item_label_style" parent="@style/text_style">
            <item name="android:textSize">@dimen/text_size_13sp</item>
            <item name="android:textColor">@color/text_color_black</item>
            <item name="android:layout_centerVertical">true</item>
        </style>

        <style name="kaola_item_layout_style2">
            <item name="android:gravity">center_horizontal</item>
            <item name="android:orientation">vertical</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_centerInParent">true</item>
        </style>


        <style name="kaola_item_layout_style">
            <item name="android:paddingLeft">@dimen/kaola_item_padding_left</item>
            <item name="android:paddingRight">@dimen/kaola_item_padding_right</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:minHeight">@dimen/kaola_item_min_height</item>
            <item name="android:background">@drawable/btn_press_whiteorgray</item>
        </style>

        <style name="kaola_item_image_style">
            <item name="android:layout_width">@dimen/kaola_item_image_width</item>
            <item name="android:layout_height">@dimen/kaola_item_image_height</item>
            <item name="android:layout_marginRight">15.0dip</item>
            <item name="android:layout_alignParentLeft">true</item>
            <item name="android:layout_centerVertical">true</item>
        </style>

        <style name="kaola_item_title_style" parent="@style/kaola_item_label_style">
            <item name="android:textSize">@dimen/text_size_15sp</item>
        </style>

        <style name="kaola_item_arrow_style">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:src">@drawable/right_black_big_arrow</item>
            <item name="android:layout_alignParentRight">true</item>
            <item name="android:layout_centerVertical">true</item>
        </style>


        <!-- ****************************************我的 ********************************************* -->
        <style name="popWindow_anim_style" parent="android:Animation">
            <item name="android:windowEnterAnimation">@anim/dialog_in</item>
            <item name="android:windowExitAnimation">@anim/dialog_out</item>
        </style>

</resources>
