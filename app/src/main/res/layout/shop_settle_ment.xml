<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">
<TextView
    android:layout_weight="6"
    android:layout_alignParentLeft="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="已选商品1件"
    android:textStyle="bold"
    android:textColor="@color/abc_background_cache_hint_selector_material_dark"
    android:textSize="@dimen/text_size_15sp"/>
    <LinearLayout
        android:layout_weight="4"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
            <TextView
                android:layout_toLeftOf="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="商品总额:"
                android:textColor="@color/gray"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/total"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_width="@dimen/price_widht"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="￥283000.00"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_toLeftOf="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动优惠:"/>
            <TextView
                android:id="@+id/discount"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_width="@dimen/price_widht"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="-￥0.00"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >
            <TextView
                android:gravity="right"
                android:layout_toLeftOf="@+id/tariff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单关税:"/>
            <TextView
                android:id="@+id/tariff"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_width="@dimen/price_widht"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="￥28"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="right"
                android:layout_toLeftOf="@+id/allTotal"
                android:textColor="@color/abc_background_cache_hint_selector_material_dark"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计(不含运费):"/>
            <TextView
                android:id="@+id/allTotal"
                android:textColor="@color/abc_background_cache_hint_selector_material_dark"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_width="@dimen/price_widht"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="￥283.00"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/btn_settlement"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_settlement_bg"
            android:textColor="@color/red"
            android:text="结算"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
